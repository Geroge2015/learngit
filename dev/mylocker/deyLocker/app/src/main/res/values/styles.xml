    <style name="AppTheme" parent="BaseTheme" />

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--Toolbar颜色 也是多任务切换的标题颜色-->
        <item name="colorPrimary">#FF3488EB</item>
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">#FF2E7AD4</item>
        <!--下划线 提示等一些组件的 着色-->
        <item name="colorAccent">#FF3488EB</item>
        <!--ActionMode出现时 覆盖ActionBar-->
        <!-- 改成false是为了解决abc_screen_simple_overlay_action_mode崩溃问题 -->
        <!-- false以后该崩溃应该没有,但有可能出现abc_screen_simple崩溃问题 -->
        <item name="windowActionModeOverlay">false</item>
    </style>

    <style name="main_tab_bottom">
        <item name="android:textSize">11dp</item>
        <item name="android:textColor">#FF3488EB</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:button">@null</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingTop">9dp</item>
    </style>

</resources>
